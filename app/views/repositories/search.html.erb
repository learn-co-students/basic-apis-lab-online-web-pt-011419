<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repositories %>
  <% @repositories.each do |repository| %>
    <%= repository["name"] %>
    <%= link_to repository["html_url"], repository["html_url"] %><br>
    <%= repository["description"] %>
  <% end %>
<% end %>
