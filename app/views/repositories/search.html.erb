<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
<% if @error %>
    <p><%= @error %></p>
<% elsif @result %>
  <% @result["items"].each do |r| %>
    <%= r["name"] %><br>
    <a href= "<%= r["html_url"] %>"><%= r["html_url"]%></a><br>
    <%= r["description"] %>
  <% end %>

<% end %>
</div>