<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @responses %>
      
      <ul>
          <% @responses.each do |resp| %>
              <li><%=resp["name"]%></li>
              <a href=<%=resp["html_url"]%>><%=resp["html_url"]%></a>
              <%=resp["description"]%>
          <% end %>
      </ul>
      
  <% end %>

</div>
